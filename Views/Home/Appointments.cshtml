
@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<GroupInfo>
@using Misison12GroupProject.Models;

<h1>Appointments</h1>

<table class="table table-bordered">

    <thead>
        <td>Group Name</td>
        <td>Group Size</td>
        <td>Email</td>
        <td>Phone Number</td>
        <td>Appointment Day</td>
        <td>Appointment Time</td>    
        <td></td> 
        <td></td> 
    </thead>

    <tbody>
        @foreach(var x in Model)
            {
        <tr>
            <td>@x.GroupName</td>
            <td>@x.GroupSize</td>
            <td>@x.email</td>
            <td>@x.phone</td>
            @foreach (Appointment a in ViewBag.APP)
            {
                if (a.AppointmentID == x.AppointmentID)
                {
                    <td>@a.Day</td>
                    <td>@a.Time</td>
                }
            }
            <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-groupID="@x.GroupId">Edit</a></td>
            <td><a class="btn btn-danger"asp-controller="Home" asp-action="Delete" asp-route-groupID="@x.GroupId">Delete</a></td>
        </tr>
            }


    </tbody>

</table>
