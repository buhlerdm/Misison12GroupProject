@{
    ViewData["Title"] = "Add Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GroupInfo

<form method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
    @*Show the errors*@

    <h4>Add Appointment</h4>

    <div class="form-group">
        <label asp-for="GroupName">Group Name:</label><input asp-for="GroupName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GroupSize">Group Size:</label><input asp-for="GroupSize" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="email">Email:</label><input asp-for="email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="phone">Phone Number:</label><input asp-for="phone" class="form-control" />
    </div>

    <div class="float-end">
        <input class="btn btn-info" type="submit" value="Save Appointment" />
    </div>

</form>

